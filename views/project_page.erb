<div class="container">
  <h2 class="tms-project-title"><%= @project.name %></h2>
  <h4 class="tms-project-progress"><%= @project.progress.to_s.slice(0, 4) %>%</h4>
  <div id="progress-chart"></div>
  <script>
    var chart = c3.generate({
      bindto: '#progress-chart',
      size: {
        width: 150,
        height: 150
      },
      data: {
        columns: [
          ['完了', <%= @project.progress %>],
          ['未完了', <%= 100 - @project.progress %>]
        ],
        type: 'pie',
        order: null
      }
    });
  </script>
  <table class="table table-bordered">
    <thead class="thead-light">
      <tr>
        <th scope="col">フェーズ名</th>
        <th scope="col">締め切り日付</th>
      </tr>
    </thead>
    <tbody>
      <% @phases.each do |phase| %>
        <tr>
          <td><a href="/projects/<%= @project.id %>/<%= phase.id %>"><%= phase.name %></a></td>
          <td><%= phase.deadline.to_s.gsub('-', '/') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <a class="btn btn-primary" href="/projects/<%= @project.id %>/create_phase">新規フェーズ作成</a>
</div>