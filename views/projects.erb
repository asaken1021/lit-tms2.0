<div class="container">
  <div class="project-description">
    <div class="container">
      <div class="row">
        <h2 class="tms-project-title col">プロジェクト一覧</h2>
      </div>
    </div>
  </div>
  <br>
  <% if @projects.count != 0 %>
    <% @projects.each do |project| %>
      <div class="card text-center">
        <div class="card-body">
          <a href="/projects/<%= project.id %>"><h4 class="card-title"><%= project.name %></h4></a>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="card text-center">
      <div class="card-body">
        <% unless session[:user] %>
          <h4 class="card-title">一覧を表示するには、サインインしてください</h4>
        <% else %>
          <h4 class="card-title">作成されているプロジェクトはありません</h4>
        <% end %>
      </div>
    </div>
  <% end %>
</div>